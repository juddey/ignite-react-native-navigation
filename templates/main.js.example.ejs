import { Navigation } from 'react-native-navigation'
import { singleScreenApp, storyBookApp } from '../navigation/layouts'
import { registerScreens } from '../navigation/ScreenRegistry'
import { StorybookUIRoot } from '../../storybook'

// Should we show storybook instead of our app?
// ⚠️ Leave this as `false` when checking into git.
const SHOW_STORYBOOK = false

if (SHOW_STORYBOOK) { Navigation.registerComponent('<%= props.name %>.UI', () => StorybookUIRoot) }

registerScreens()
Navigation.events().registerAppLaunchedListener(() => {
  if (SHOW_STORYBOOK && __DEV__) {
    Navigation.setRoot(storyBookApp)
  } else { Navigation.setRoot(singleScreenApp) }
})
